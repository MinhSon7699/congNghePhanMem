@model PagedList.IPagedList<congNghePhanMem.Models.register>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_main.cshtml";
}

@section header
{
    Quản lý tài khoản
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Html.ActionLink("Thêm tài khoản", "Create")</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "Register", FormMethod.Get))
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Permision</th>
                            <th>Status</th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.Id">
                                <td>@item.name</td>
                                <td>@item.userName</td>
                                <td>@item.email</td>
                                <td>@item.passWord</td>
                                <td>@item.phone</td>
                                <td>@item.address</td>
                                <td>@item.permision</td>
                                <td>
                                    @(Convert.ToInt32(item.status) > 0 ? "Active" : "block")
                                </td>
                                <td>
                                    <a href="/Admin/user/Edit/@item.Id">Sửa</a>
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                               {
                                   Confirm = "Bạn có chắc muốn xóa bản ghi này ?",
                                   OnComplete = "$('#row_" + @item.Id + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("", "Index", new { page }))
            </div>
        }
    </div>
</div>

        </div>
